@model ProfileInputModel

@{
    ViewData["Title"] = "Edit Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
}

<div class="container profile-container mt-5 pb-2">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card profile-card">
                <div class="card-header profile-card-header">
                    <h2 class="mb-0">Edit Profile</h2>
                </div>
                <div class="card-body profile-card-body">
                    <form id="editProfileForm" method="post" enctype="multipart/form-data" asp-action="Edit">
                        <div class="row mb-3">
                            <div class="col-md-4 profile-picture-container text-center">
                                @if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
                                {
                                    var base64 = Convert.ToBase64String(Model.ProfilePicture);
                                    var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                                    <img id="profile-picture" src="@imgSrc" alt="Profile Picture" class="profile-picture mb-3">
                                }
                                else
                                {
                                    <img id="profile-picture" src="/images/default-pfp.svg" alt="Profile Picture" class="profile-picture mb-3">
                                }
                            </div>
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label class="profile-label">Profile Picture</label>
                                    <input type="file" id="profilePictureFile" class="form-control" />
                                    <input type="hidden" asp-for="ProfilePicture" id="profilePicture" />
                                    <span class="text-danger" id="fileSizeError"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="FirstName" class="profile-label">First Name</label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="LastName" class="profile-label">Last Name</label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Username" class="profile-label">Username</label>
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="profile-label">Email</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn edit-profile-btn">Save Changes</button>
                                    <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/profile.js" asp-append-version="true"></script>
    <script src="~/js/edit-form.js" asp-append-version="true"></script>
}

